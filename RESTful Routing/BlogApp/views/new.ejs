<% include ./partials/header %>

<div class="ui main container segment">
    
    <form class="ui form" action="/blogs" method="POST">
        <div class="ui huge header">
            New Post
        </div>
         <div class="field">
            <label>Post Title</label>
            <input type="text" name="blog[title]" placeholder="post title">
         </div>
         <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="post image">
         </div>
         <div class="field">
            <label>Blog Input</label>
            <textarea name="blog[body]"></textarea>
            <!--<input type="text" name="blog[body]" placeholder="Enter your post here">-->
         </div>
         <div class="field">
            <div class="ui checkbox">
              <input type="checkbox" tabindex="0" class="hidden">
              <label>I agree to the Terms and Conditions</label>
            </div>
         </div>
         <!--<button class="ui button" type="submit">Submit</button>-->
         <button class="ui purple basic big button">
             Okay
        </button>
        <button class="ui button">
          Cancel
        </button>
    </form>

</div>

