            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
         </div>
         <div class="field">
            <label>Blog Input</label>
            <textarea name="blog[body]" value="<%= blog.body %>"><%= blog.body %></textarea>
         </div>
